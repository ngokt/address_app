<p id="notice"><%= notice %></p>

<div class="address">アドレス帳</div>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>住所</th>
      <th>年齢</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each_with_index do |user, idx| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td id="user_age<%= idx %>"></td>
        
        <script>
          var dateStr = "<%== JSON.dump(user.age) %>";
         
          var birthdate = new Date(dateStr.substr(0, 4), dateStr.substr(4, 2)-1, dateStr.substr(6, 2))
 
          var ageCalculation = ( birthDate , nowDate ) => {
            var birthNumber = birthDate.getFullYear() * 10000 
                                      + (birthDate.getMonth() + 1 ) * 100 
                                      + birthDate.getDate();
            var nowNumber = nowDate.getFullYear() * 10000 
                                      + (nowDate.getMonth() + 1 ) * 100 
                                      + nowDate.getDate();
        
            return Math.floor( (nowNumber - birthNumber) / 10000 );
          }
 
          age = ageCalculation( new Date(birthdate) , new Date() );
          document.getElementById("user_age<%= idx %>").innerHTML = age + "歳" ;
        </script>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

