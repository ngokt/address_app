<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <input type="text" name="user[name]" id="user_name" required>
  </div>

  <div class="field">
    <%= form.label :address %>
    <input type="text" name="user[address]" id="user_address" maxlength="30" required>
  </div>

  <div class="field">
    <%= form.label :age %>
    <input type="number" name="user[age]" id="user_age" min="0" max="130">
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
